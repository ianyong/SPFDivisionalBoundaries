<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
    </style>

    <style name="BottomSheetButtonLayout">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="BottomSheetButton">
        <item name="android:layout_width">@dimen/bottom_sheet_button_size</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">@dimen/bottom_sheet_buttons_padding_top</item>
        <item name="android:paddingBottom">@dimen/bottom_sheet_buttons_padding_bottom</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?selectableItemBackgroundBorderless</item>
    </style>

    <style name="BottomSheetButtonImage">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/colorAccent</item>
    </style>

    <style name="BottomSheetButtonText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:layout_marginTop">@dimen/bottom_sheet_button_text_margin</item>
    </style>

    <style name="BottomSheetInfoLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">left|center</item>
    </style>

    <style name="BottomSheetInfoIcon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:tint">@color/colorAccent</item>
        <item name="android:paddingRight">@dimen/bottom_sheet_info_text_margin</item>
    </style>

    <style name="BottomSheetInfoText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomSheetInfoSpace">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/bottom_sheet_info_space_height</item>
    </style>

</resources>
